# MedAI NLP Service Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODELS_DIR=./models
MODELS_FILE_DIR=./ner_archived
CACHE_DIR=./cache



# spaCy Model Configuration
SPACY_MODEL_NAME=spacy_de_core_news_md
SPACY_MODEL_URL=https://github.com/explosion/spacy-models/releases/download/de_core_news_md-3.7.0/de_core_news_md-3.7.0-py3-none-any.whl
SPACY_ENABLED=true

# GERNERMEDpp Model Configuration
GERNERMED_MODEL_NAME=GERNERMEDpp
GERNERMED_MODEL_FILE_NAME=GERNERMEDpp_GottBERT.zip
GERNERMED_URL=https://myweb.rz.uni-augsburg.de/~freijoha/GERNERMEDpp/GERNERMEDpp_GottBERT.zip
GERNERMED_ENABLED=true

# GermanBERT Model Configuration (Optional)
GERMANBERT_MODEL_NAME=GermanBERT
GERMANBERT_URL=
GERMANBERT_ENABLED=false

# =============================================================================
# SERVICE SETTINGS
# =============================================================================

# Text Processing Limits
MAX_TEXT_LENGTH=10000
MAX_BATCH_SIZE=100
EXTRACTION_TIMEOUT=30

# =============================================================================
# API SETTINGS
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# LOGGING
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# PATHS
# =============================================================================

# Model and Cache Directories
MODELS_DIR=./models
CACHE_DIR=./cache

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Memory and Processing
WARMUP_ENABLED=true
MEMORY_LIMIT_MB=4096
GC_THRESHOLD=0.8
BATCH_PROCESSING=true

# =============================================================================
# ICD CONFIGURATION
# =============================================================================

# ICD-10/ICD-11 Lookup Settings
ICD_LOOKUP_ENABLED=true
ICD_CACHE_SIZE=1000
ICD_TIMEOUT=5

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode (enables debug features)
DEBUG=false

# Enable CORS for development
CORS_ENABLED=false
CORS_ORIGINS=*

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Key (optional)
API_KEY=

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# MONITORING
# =============================================================================

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Metrics Collection
METRICS_ENABLED=false
METRICS_PORT=9090